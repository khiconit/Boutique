.js-qty {
	min-width: 114px;
}
.newsletter-form {
	min-width: 360px;
}
.quick-modal {
	border: 2px solid #ddd;
}
.site-header {
	.wrapper {
		.grid--full {
			.grid-table {
				display: table;
				.grid-row {
					display: table-row;
					.grid-cell {
						display: table-cell;
						width: auto;
						
						&.logo-cell {
							width: auto;
						}
						&.sc-cell {
							width: auto;
						}
						.small-cart:before {
							display: none;
						}
					}
				}
			}
		}
	}
}
.product-collection {
	.section-header--right {
		.form-horizontal {
			float: right;
			width: 220px;
			
			label {
				line-height: 36px;
			}
		}
	}
}
.product-wrapper {
	.grid-item-label{
		left: -10px;
		
		&.soldout {
			left: -10px;
		}
	}
}
//Grid
/** Whole */
.large--one-whole			 { width:100%; }

/* Halves */
.large--one-half				{ width:50%; }

/* Thirds */
.large--one-third			 { width:33.333%; }
.large--two-thirds			{ width:66.666%; }

/* Quarters */
.large--one-quarter		 { width:25%; }
.large--two-quarters		{ @extend .large--one-half; }
.large--three-quarters	{ width:75%; }

/* Fifths */
.large--one-fifth			 { width:20%; }
.large--two-fifths			{ width:40%; }
.large--three-fifths		{ width:60%; }
.large--four-fifths		 { width:80%; }

/* Sixths */
.large--one-sixth			 { width:16.666%; }
.large--two-sixths			{ @extend .large--one-third; }
.large--three-sixths		{ @extend .large--one-half; }
.large--four-sixths		 { @extend .large--two-thirds; }
.large--five-sixths		 { width:83.333%; }

/* Eighths */
.large--one-eighth			{ width:12.5%; }
.large--two-eighths		 { @extend .large--one-quarter; }
.large--three-eighths	 { width:37.5%; }
.large--four-eighths		{ @extend .large--one-half; }
.large--five-eighths		{ width:62.5%; }
.large--six-eighths		 { @extend .large--three-quarters; }
.large--seven-eighths	 { width:87.5%; }

/* Tenths */
.large--one-tenth			 { width:10%; }
.large--two-tenths			{ @extend .large--one-fifth; }
.large--three-tenths		{ width:30%; }
.large--four-tenths		 { @extend .large--two-fifths; }
.large--five-tenths		 { @extend .large--one-half; }
.large--six-tenths			{ @extend .large--three-fifths; }
.large--seven-tenths		{ width:70%; }
.large--eight-tenths		{ @extend .large--four-fifths; }
.large--nine-tenths		 { width:90%; }

/* Twelfths */
.large--one-twelfth		 { width:8.333%; }
.large--two-twelfths		{ @extend .large--one-sixth; }
.large--three-twelfths	{ @extend .large--one-quarter; }
.large--four-twelfths	 { @extend .large--one-third; }
.large--five-twelfths	 { width:41.666% }
.large--six-twelfths		{ @extend .large--one-half; }
.large--seven-twelfths	{ width:58.333%; }
.large--eight-twelfths	{ @extend .large--two-thirds; }
.large--nine-twelfths	 { @extend .large--three-quarters; }
.large--ten-twelfths		{ @extend .large--five-sixths; }
.large--eleven-twelfths { width:91.666%; }

.grid-uniform {
	.large--one-half:nth-child(2n+1),
	.large--one-third:nth-child(3n+1),
	.large--one-quarter:nth-child(4n+1),
	.large--one-fifth:nth-child(5n+1),
	.large--one-sixth:nth-child(6n+1),
	.large--two-sixths:nth-child(3n+1),
	.large--three-sixths:nth-child(2n+1),
	.large--two-eighths:nth-child(4n+1),
	.large--four-eighths:nth-child(2n+1),
	.large--five-tenths:nth-child(2n+1),
	.large--one-twelfth:nth-child(12n+1),
	.large--two-twelfths:nth-child(6n+1),
	.large--three-twelfths:nth-child(4n+1),
	.large--four-twelfths:nth-child(3n+1),
	.large--six-twelfths:nth-child(2n+1)		 { clear:both; }
}

