<div class="page-banner contact-banner">
  <div class="banner-content">
    <span class="subtitle">{{ settings.banner_contact_title }}</span>
    <h2 class="title">{{ settings.banner_contact_desc }}</h2>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <div class="kt-contact-form margin-top-60">
        <div id="message-box-conact"></div>
        <h3 class="title">{{settings.contact_title}}</h3>
        {% form 'contact' %}

        {% if form.posted_successfully? %}
        <p class="note form-success">
          {{ 'contact.form.post_success' | t }}
        </p>
        {% endif %}

        {{ form.errors | default_errors }}
        <p>
          {% assign name_attr = 'contact.form.your_name' | t | handle %}
          <input type="text" id="name" placeholder="{{ 'contact.form.your_name' | t }}" name="contact[{{ name_attr }}]"  value="{% if form[name_attr] %}{{ form[name_attr] }}{% elsif customer %}{{ customer.name }}{% endif %}" required>
        </p>
        <p>
          {% assign name_attr = 'contact.form.your_email' | t | handle %}
          <input type="text" id="name" placeholder="{{ 'contact.form.your_email' | t }}" name="contact[{{ name_attr }}]"  value="{% if form[name_attr] %}{{ form[name_attr] }}{% elsif customer %}{{ customer.name }}{% endif %}" required>
        </p>
        <p>
          {% assign name_attr = 'contact.form.your_message' | t | handle %}
          <textarea id="content" placeholder="{{ 'contact.form.your_message' | t }}" name="contact[body]" required>{% if form.body %}{{ form.body }}{% endif %}</textarea>
        </p>
        <button id='btn-send-contact' class="button" type="submit" value="{{ 'contact.form.send' | t }}">{{ 'contact.form.send' | t }}</button>
        {% endform %}
      </div>
    </div>
    <div class="col-sm-6">
      <div class="margin-top-60">
        {% if settings.use_contact_map %}
            {{ settings.map_iframe }}
        {% endif %}
        <h6 class="margin-top-20">{{settings.title_call}}</h6>
        <p class="roboto">{{ settings.call_desc }}</p>
        <p style="font-size: 18px; color: #222; font-weight: bold;"><i class="fa fa-phone"></i>{{ settings.phone_contact }}</p>
      </div>
    </div>
  </div>
</div>
