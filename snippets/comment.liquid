
<!-- /snippets/comment.liquid -->
{% comment %}

  This snippet generates the structure of a comment.
  It is used to show not only recent comments, but also comments that were
  just published but not yet approved.

  More information:
   - http://docs.shopify.com/themes/liquid-variables/comment

{% endcomment %}

<div class="comment-item">
    <div class="comment-author">
        {{'admin_avatar_1449223716-50x50.png'|  asset_url | img_tag }}
      </div>
        <div class="comment-body">
            <h5 class="author">{% capture author %}{{ comment.author }}{% endcapture %}</h5>
                <span class="date-comment">{% capture date %}<strong><time datetime="{{ comment.created_at | date: '%Y-%m-%d' }}">{{ comment.created_at | | date: "%d %b %Y" }}</time></strong>{% endcapture %}</span>
            <div class="comment-content">
                 <p>{{ comment.content }}</p>
            </div>
           <a rel="nofollow" class="comment-reply-link" href="#">reply<i class="fa fa-mail-reply"></i></a>
        </div>
</div>