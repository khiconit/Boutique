{% comment %}
  Toggle between collection.liquid and collection.list.liquid with the
  ?view= parameter.
{% endcomment %}

<div class="show-grid-list">
    <span class="label-filter">{{ 'collections.general.view_on' | t }}</span>
    <a class="show-grid change-view{% unless template contains 'list' %} active {% endunless %}" data-view="grid" ><i class="fa fa-th"></i></a>
    <a class="show-list change-view{% if template contains 'list' %} active {% endif %}" data-view="list" ><i class="fa fa-list"></i></a>
</div>
