      jQuery(document).ready(function($) {

        $(document).on('mouseover','.box-settings',function(){
          var names = $('.currency-list ul li.active a').attr('class');
          var name_check = $('.currency-picker__wrapper .chosen-single span').first().text();
          if(names != name_check ){
            $('.currency-list ul li').removeAttr("class");
            $('.currency-list ul li a.' + name_check + '').parent("li").attr("class","active");
          }else{
            $('.currency-list ul li a.' + name_check + '').parent("li").attr("class","active");
          }
        });
        $(document).on('click','.currency-list ul li',function(e){
          $('.currency-list ul li').removeAttr("class");
          $(this).attr("class","active");
          var name_currency = $(this).find("a").attr('class');
          $('.currency-picker__wrapper .chosen-single span').text(name_currency);
          $('.currency-picker').val(name_currency);
          $('.currency-picker').val(name_currency).change();
          Currency.cookie.write(name_currency);

          //location.reload();
        });
      });
    })(jQuery);
  </script>
