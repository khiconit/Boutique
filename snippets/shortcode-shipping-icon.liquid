{% unless margin_shipping_icon %}
{% assign margin_shipping_icon = "margin-top-60" %}
{% endunless %}

{% unless container_shipping_icon %}
{% capture container_shipping_icon %} class="container"{% endcapture %}
{% endunless %}


{% if template contains "index" %}
<div class="margin-top-60 margin-bottom-30">
  <div class="row">
    {% else %}
    <div class="{{margin_shipping_icon}}">
      <div{{container_shipping_icon}}>
        <div class="row">
        {% endif %}
    <div class="col-sm-12 col-md-4">
      <div class="element-icon style2">
        <div class="icon">
          {% if settings.use_img_1 %}
            {{'shipping_info_1_img' | asset_url | img_tag}}
          {% else %}
            <i class="flaticon flaticon-origami28"></i>
          {% endif %}
        </div>
        <div class="content">
          <h4 class="title">{{settings.shipping_info_1_content | strip_html}}</h4>
        </div>
      </div>
    </div>
    <div class="col-sm-12 col-md-4">
      <div class="element-icon style2">
        <div class="icon">
          {% if settings.use_img_2 %}
            {{'shipping_info_2_img' | asset_url | img_tag}}
          {% else %}
            <i class="flaticon flaticon-curvearrows9"></i>
          {% endif %}
        </div>
        <div class="content">
          <h4 class="title">{{settings.shipping_info_1_content | strip_html}}</h4>
        </div>
      </div>
    </div>
    <div class="col-sm-12 col-md-4">
      <div class="element-icon style2">
        <div class="icon">
          {% if settings.use_img_3 %}
            {{'shipping_info_3_img' | asset_url | img_tag}}
          {% else %}
            <i class="flaticon flaticon-headphones54"></i>
          {% endif %}
        </div>
        <div class="content">
          <h4 class="title">{{settings.shipping_info_1_content | strip_html}}</h4>
        </div>
      </div>
    </div>
{% if template contains "index" %}
        </div></div>
      {% else %}
    </div></div></div>
{% endif %}